generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Event {
  id            String    @id
  name          String
  duration      String
  start_at      DateTime
  end_at        DateTime?
  address_1     String
  address_2     String?
  zip_code      String
  city          String
  country       String
  description   String?
  feesIncluded  Boolean   @default(false)
  logo          String?
  imageBlurhash String?
  subdomain     String?   @unique
  customDomain  String?   @unique
  edition       String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime
  organizatorId String?
  limitPerForm  Int       @default(50)

  @@index([subdomain, id, customDomain])
}
